<h2><%= @page_title = "Users" %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% current_account.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Edit", edit_user_path(user) %>
          <% unless user == current_user %>
            <%= link_to "Delete", user, :method => "delete", :confirm => "Are you sure you want to delete this user?" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add a new user", new_user_path %>
