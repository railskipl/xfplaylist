<div id="new-session">
  <h2>Sign In</h2>
  
  <%= form_tag preauthentication_path do |f| %>
    <div class="field string">
      <%= label_tag "user[email]", "Your email address" %>
      <%= text_field_tag "user[email]" %>
    </div>

    <p class="actions">
      <%= submit_tag "Continue" %>
      or <%= link_to "sign up", plans_path %>
    </p>
  <% end %>
</div>

